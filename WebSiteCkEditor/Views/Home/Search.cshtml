@using WebSiteCkEditor.Models;
@model ClientModel
@{
    ViewBag.Title = "Search";
    var routeValues = this.ViewContext.RouteData.Values;
    var lang = routeValues["controller"] as string;
}
    <div style="width:100%;background:white;height:120%;margin-top:-19px;padding:30px;">
        <div style="min-height:650px;margin:20px auto;">
            <section>
                <div class="main-size">
                    <div class="content">
                        <div class="content-link">
                            @Html.Partial("~/Views/Part/AdsView.cshtml", Model.lst_newads)
                        </div>
                        <div class="content-all" style="margin-left:45px;">
                            <div style="color: #2c396e; margin-left:30px; margin-bottom: 50px; font-size:45px; font-family:'Times New Roman', Times, serif">@WebSiteCkEditor.Resources.ClientLang.Search</div>

                            <div>
                                @foreach (var item in Model.lst_newsv)
                                {
                                    <article class="">
                                        @if (item.ParentID == 0)
                                        {
                                            <h2 class="post-title"><a href="/@lang/News/@item.Id">@item.Title</a></h2>
                                        }
                                        else
                                        {
                                            <h2 class="post-title"><a href="/@lang/News/@item.ParentID">@item.Title</a></h2>
                                        }

                                        <div class="">
                                            <p >@item.Desc</p>
                                        </div>
                                        <br />
                                        <br />
                                    </article>
                                }
                                @foreach (var item in Model.lst_pages)
                                {
                            <article class="blogpost">
                                @if (item.ParentID == 0)
                                {
                                    <h2 class="post-title"><a href="/@lang/page/@item.Id">@item.Title</a></h2>
                                }
                                else
                                {
                                    <h2 class="post-title"><a href="/@lang/page/@item.ParentID">@item.Title</a></h2>
                                }
                                <div class="">
                                    <p class="">@item.Desc</p>
                                </div>
                                <br />
                                <br />
                            </article>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
 


            


