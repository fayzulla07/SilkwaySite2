@model WebSiteCkEditor.Models.Blogs
@{
    ViewBag.Title = "AskPresident";
        var routeValues = this.ViewContext.RouteData.Values;
    var lang = routeValues["controller"] as string;
}
@using reCAPTCHA.MVC
<link href="~/Scripts/1.0.0.0/blog/css-blogs/blog-form.css" rel="stylesheet" />
<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        cursor: pointer;
    }

    .button2 {
        background-color: white;
        color: black;
        border: 2px solid #008CBA;
    }

        .button2:hover {
            background-color: #008CBA;
            color: white;
        }
</style>
<div style="width:100%;background:white;height:120%;margin-top:-19px;padding:30px;">

    <div class="content">
        <div class="menu">
            <h3>@WebSiteCkEditor.Resources.ClientLang.Menu</h3>
            <ul>
                <li>
                    <a href="/@lang/rector">@WebSiteCkEditor.Resources.ClientLang.Rectorsblog</a>
                </li>
                <li>
                    <a href="/@lang/answerrector">@WebSiteCkEditor.Resources.ClientLang.Questions  </a>
                </li>
                <li>
                    <a href="/@lang/askrector">@WebSiteCkEditor.Resources.ClientLang.AskQuestion</a>
                </li>
            </ul>
        </div>
        <div class="blog">
            <h3>
                Задать вопрос
            </h3>
            <h4 style="color:red;">@ViewBag.err</h4>
            <form action="/@lang/AskRector" method="post" name="">
                <div class="form-area">
                    <div class="form-label">
                        <label for="input">@WebSiteCkEditor.Resources.ClientLang.FirstName <span>*</span></label>
                        <input type="text" name="FirstName">
                    </div>
                    <div class="form-label">
                        <label for="input">@WebSiteCkEditor.Resources.ClientLang.LastName<span>*</span></label>
                        <input type="text" name="LastName">
                    </div>
                    <div class="form-label">
                        <label for="input">E-mail <span>*</span></label>
                        <input type="email" name="Mail">
                    </div>
                    <div class="form-label">
                        <label for="input">@WebSiteCkEditor.Resources.ClientLang.Question<span>*</span></label>
                        <textarea name="Question" id="" cols="30" rows="10"></textarea>
                    </div>
                    <div class="form-label">
                        <img src='@Url.Action("Captcha", "Capt")' alt='captcha' />
                        <input type="text" placeholder="Введите текст с картинки" required name="captchaValid">
                    </div>
                    <div class="form-label">
                        <button type="submit" class="button button2">@WebSiteCkEditor.Resources.ClientLang.AskQuestion</button>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>


