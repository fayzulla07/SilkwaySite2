@model WebSiteCkEditor.Models.Blogs
@{
    ViewBag.Title = "PresQuesEdit";
     Layout = "~/Views/Admin/AdminLayout.cshtml";
}
    <div class="col-lg-12" style="background-color:white; border-radius:10px; padding:30px;">
        <h1 style="height:40px;">Ответить Пользователю</h1>
        <div class="row">

            <div class="col-lg-12">
                <div>
                    @using (Html.BeginForm("RectorQuesEdit", "Admin", FormMethod.Post))
                    {

                        <div class="form-group" style="margin-bottom:10px;">
                            <label for="usr">Имя</label>
                            <input type="text" class="form-control" style="border-radius:6px;" value="@Model.FirstName" name="FirstName" required>
                        </div>
                        <div class="form-group" style="margin-bottom:10px;">
                            <label for="usr">Фамилия</label>
                            <input type="text" class="form-control" style="border-radius:6px;" value="@Model.LastName" name="LastName" required>
                        </div>
                        <div class="form-group" style="margin-bottom:10px;">
                            <label for="usr">E-mail</label>
                            <input type="text" class="form-control" style="border-radius:6px;" value="@Model.Mail" name="Mail" required>
                        </div>
                        <div class="form-group" style="margin-bottom:10px;">
                            <label for="usr">Вопрос</label>
                            <textarea cols="65" rows="4" type="text" class="form-control" style="border-radius:6px;" name="Question" required>@Model.Question</textarea>
                        </div>
                        <div class="form-group" style="margin-bottom:10px;">
                            <label for="usr">Ответ</label>
                            <textarea cols="65" rows="4" type="text" class="form-control" style="border-radius:6px;" name="Answer" required>@Model.Answer</textarea>
                        </div>
                        <div class="form-group" style="float:left;">
                            <label for="usr">Видимый / Невидимый</label>
                            @Html.CheckBox("IsVisible", Model.IsVisible, new { @class = "form-control checkbox", @style = "float:left;" })
                        </div>
                        <div class="form-group" style="margin-bottom:10px;">
                            <button style="margin-left:20px; margin-top:50px;" type="submit" class="btn btn-outline-success">Изменить</button>
                        </div>
                        <label>Примечание: Сначало сохраните сообщение потом вернитесь сюда и нажмите </label>
                        <button name="send" value="1" type="submit" class="btn btn-danger">ответить на почту</button>
                    }


                </div>
                    </div>

        </div>
    </div>

