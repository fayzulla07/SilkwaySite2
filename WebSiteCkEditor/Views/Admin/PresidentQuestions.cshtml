@model IEnumerable<WebSiteCkEditor.Models.Blogs>
@{
    ViewBag.Title = "PresidentQuestions";
     Layout = "~/Views/Admin/AdminLayout.cshtml";
}


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div class="container-fluid" style="padding:30px; background-color:white; border-radius:10px;">
    <div class="container-fluid">
        <h1 style="margin-bottom:30px;">Вопросы президенту</h1>
       
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th style="width: 2%">ID</th>
                    <th style="width: 20%">Имя</th>
                    <th style="width: 15%">e-mail</th>
                    <th style="width: 10%">Дата</th>
                    <th style="width: 30%">Вопрос</th>
                    <th style="width: 40%">Ответ</th>
                    <th style="width: 5%">Статус</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>

                    <td>@item.Id</td>
                    <td><a style="color:dodgerblue;" href="/admin/presquesedit/@item.Id">@item.LastName  @item.FirstName</a></td>
                    <td>@item.Mail</td>
                    <td>@item.RegDT</td>
                    <td>@item.Question</td>
                    <td>@item.Answer</td>
                    @if (item.IsVisible)
                    {
                        <td style="color:blue;">Видимый</td>
                    }
                    else
                    {
                        <td style="color:red;">НЕвидимый</td>
                    }
                </tr>
                }




            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script type="text/javascript">$(document).ready(function() {
        $('#example').DataTable();
    });</script>


